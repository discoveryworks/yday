{
  "lastTuesdayScenarios": {
    "semantic": {
      "description": "User runs: yday --last-tuesday",
      "expectedRepos": [
        {
          "name": "rails",
          "commits": 2,
          "summary": "Working on Rails & security"
        },
        {
          "name": "my-app", 
          "commits": 1,
          "summary": "Working on authentication"
        }
      ]
    },
    "timeline": {
      "description": "User runs: yday --last-tuesday --alastair",
      "expectedPatterns": {
        "rails": "·2·····",
        "my-app": "·1·····"
      },
      "expectedWeekStart": "Monday, July 21, 2025",
      "note": "Shows full week but Tuesday (position 1) should match semantic counts"
    }
  },
  "dateMapping": {
    "referenceDate": "2025-07-28",
    "dayMapping": {
      "0": "Monday, July 28",
      "5": "Wednesday, July 23", 
      "6": "Tuesday, July 22",
      "7": "Monday, July 21"
    }
  },
  "consistency": {
    "rule": "Timeline Tuesday counts must equal semantic Tuesday totals",
    "tuesday_position": 1,
    "expected_matches": [
      {"repo": "rails", "semantic": 2, "timeline_pos_1": 2},
      {"repo": "my-app", "semantic": 1, "timeline_pos_1": 1}
